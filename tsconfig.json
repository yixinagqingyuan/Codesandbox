{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "element-plus/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "styles/*": [
        "./src/styles/*"
      ],
      "plugins/*": [
        "./src/plugins/*"
      ],
      "views/*": [
        "./src/views/*"
      ],
      "packages/*": [
        "./src/packages/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "apis/*": [
        "./src/apis/*"
      ],
      "dirs/*": [
        "./src/dirs/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}